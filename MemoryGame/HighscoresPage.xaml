<Page x:Class="MemoryGame.HighscoresPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MemoryGame"
      mc:Ignorable="d" 
      d:DesignHeight="380" d:DesignWidth="270">

    <Grid>
        <Image Source="skyFALLpages.jpg" Stretch="Fill" Margin="0,-21,0,0"/>
        <Button x:Name="highscores_backbutton" Content="Back !" HorizontalAlignment="Left" Margin="189,345,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.5,0.5" Click="highscores_backbutton_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-13.117"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Label x:Name="Scores" Content="Label" Foreground="#FFE0E0E0" HorizontalAlignment="Left" Height="257" Margin="10,54,0,0" VerticalAlignment="Top" Width="237"/>
        <Label Content="Highscores" Foreground="#FFE0E0E0" HorizontalAlignment="Left" Height="39" Margin="10,10,0,0" VerticalAlignment="Top" Width="250" FontFamily="Showcard Gothic" FontSize="20" FontStyle="Italic"/>
    </Grid>
</Page>
